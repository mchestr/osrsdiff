# Environment Configuration Example
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql+asyncpg://osrs_diff:osrs_diff_password@localhost:5432/osrs_diff
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OSRS API
OSRS_API_BASE_URL=https://secure.runescape.com/m=hiscore_oldschool
OSRS_API_RATE_LIMIT_SECONDS=2

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# TaskIQ Configuration
TASKIQ_DEFAULT_RETRY_COUNT=3
TASKIQ_DEFAULT_RETRY_DELAY=2.0
TASKIQ_MAX_RETRY_DELAY=60.0
TASKIQ_TASK_TIMEOUT=300.0
TASKIQ_RESULT_TTL=3600
TASKIQ_WORKER_CONCURRENCY=4
TASKIQ_SCHEDULER_PREFIX=osrsdiff:schedules

# TaskIQ Scheduler Configuration
TASKIQ_SCHEDULER_REDIS_URL=redis://localhost:6379/0
TASKIQ_SCHEDULER_STARTUP_DELAY=5



# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Admin User (created on startup if doesn't exist)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
ADMIN_EMAIL=admin@example.com