# Environment Configuration Example
# Copy this file to .env and update the values

# Database
DATABASE__URL=postgresql+asyncpg://osrs_diff:osrs_diff_password@localhost:5432/osrs_diff
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20
DATABASE__POOL_RECYCLE=3600

# Redis
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=10

# JWT Authentication
JWT__SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT__ALGORITHM=HS256
JWT__ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT__REFRESH_TOKEN_EXPIRE_DAYS=7

# OSRS API
OSRS_API_BASE_URL=https://secure.runescape.com/m=hiscore_oldschool
OSRS_API_RATE_LIMIT_SECONDS=2

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# TaskIQ Configuration
TASKIQ__DEFAULT_RETRY_COUNT=3
TASKIQ__DEFAULT_RETRY_DELAY=2.0
TASKIQ__MAX_RETRY_DELAY=60.0
TASKIQ__TASK_TIMEOUT=300.0
TASKIQ__RESULT_TTL=3600
TASKIQ__WORKER_CONCURRENCY=4
TASKIQ__SCHEDULER_PREFIX=osrsdiff:schedules

# TaskIQ Scheduler Configuration
TASKIQ_SCHEDULER_REDIS_URL=redis://localhost:6379/0
TASKIQ_SCHEDULER_STARTUP_DELAY=5



# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Admin User (created on startup if doesn't exist)
ADMIN__USERNAME=admin
ADMIN__PASSWORD=change-this-secure-password
ADMIN__EMAIL=admin@example.com
